})

$('#play').click(function(){
  var obj {
    time: +new Date(),
    offset: low.offset,
    currentTime: $('#song1').get(0).currentTime,
    id: myid
  }
  io.socket.post('/Room/play', low)
})

io.socket.on('play', function (data){
  var offset = low.offset - data.offset
  var delay = +new Date() - data.time - offset
  $('#song1').get(0).currentTime += delay/1000
  $('#song1').get(0).play()
})


